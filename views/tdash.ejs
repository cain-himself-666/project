      <ul>
        <li>
          <p><i class="fa fa-user"></i></p>
          <p>Total User: 0</p>
        </li>
        <li>
          <p><i class="fa fa-user" style="color: green;"></i></p>
          <p>Active Users: 0</p>
        </li>
        <li id="inactive">
          <p><i class="fa fa-user" style="color: red;"></i></p>
          <p>Inactive Users: 0</p>
        </li>
      </ul>
    </div> -->
  </body>
  <script>
    var modalc = document.getElementById("modalc");
    var modalj = document.getElementById("modalj");
    var btn1 = document.getElementById("create");
    var btn2 = document.getElementById("join");
    var span1 = document.getElementsByClassName("close")[0];
    var span2 = document.getElementsByClassName("close")[1];

    btn1.onclick = function() {
      modalc.style.display = "block";
    }
    btn2.onclick = function() {
      modalj.style.display = "block";
    }
    span1.onclick = function(event) {
      modalc.style.display = "none";
    }
    span2.onclick = function(event) {
      modalj.style.display = "none";
    }
    window.onclick = function(event) {
    if (event.target == modalc) {
      modalc.style.display = "none";
    }
    if(event.target == modalj){
      modalj.style.display = "none";
    }
    }
  </script>
</html>
