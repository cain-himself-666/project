<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
      *{
        margin: 0;
        padding: 0;
        list-style: none;
        text-decoration: none;
        font-family: helvetica,arial,sans-serif;
      }
      .nav-bar{
        position: fixed;
        left: 0;
        width: 250px;
        height: 100%;
        background-color: #14CF00;
      }
      .nav-bar header{
          font-size: 25px;
          color: white;
          line-height: 70px;
          text-align: center;
          user-select: none;
          margin-top: 20px;
          margin-bottom: 20px;
      }
      .nav-bar ul li i{
        margin-right: 15px;
      }
      .nav-bar ul li a{
        display: block;
        font-size: 18px;
        line-height: 25px;
        color: white;
        padding: 40px;
        box-sizing: border-box;
        border: 1px solid white;
        transition: 0.4s;
      }
      .nav-bar ul a:hover{
        padding-left: 50px;
      }
      #menu{
        display:none;
      }
      .menu-bar i{
        position: absolute;
      }
      .tabs{
        margin-left: 430px;
      }
      .tabs h1{
        text-align: center;
        color: #0673BA;
      }
      .tabs ul{
        display: flex;
        flex-wrap: wrap;
      }
      .tabs ul li{
        box-sizing: border-box;
        width: 35%;
        padding: 80px;
        height: 35vh;
        border: 1px solid white;
        border-radius: 13px;
        margin-left: 40px;
        margin-right: 150px;
        margin-top: 100px;
        -webkit-box-shadow: -2px 3px 38px 0px rgba(20,207,0,1);
        -moz-box-shadow: -2px 3px 38px 0px rgba(20,207,0,1);
        box-shadow: -2px 3px 38px 0px rgba(20,207,0,1);
        transition: 1s;
      }
      .tabs ul li p{
        font-size: 2.5rem;
        color: #14CF00;
        text-align: center;
      }
      .tabs ul li p i{
        margin-bottom: 70px;
      }
      @media screen and (max-width: 850px) {
        .nav-bar ul li a span{
          display: none;
        }
        .nav-bar{
          width: 100px;
        }
        .nav-bar li a i {
            display: block;
            text-align: center;
            margin-left: 0;
            line-height: 80px;
            font-size: 20px;
        }
      }
    </style>
  </head>
  <body>
    <input type="checkbox" id="menu"/>
    <label for="menu" class="menu-bar">
        <i class="fa fa-bars" style="font-size: 25px;color: blue"></i>
    </label>
    <div class="nav-bar">
      <header><i class="fa fa-user-circle-o" style="margin-right: 10px;"></i>Teacher Dash</header>
      <ul>
        <li><a href="/auth/users"><i class="fa fa-id-card"></i><span>Users</span></a></li>
        <li><a href="/auth/registration"><i class="fa fa-user-plus"></i><span>Register Users</span></a></li>
        <li><a href="/auth/logs"><i class="fa fa-sliders"></i><span>Logs</span></a></li>
        <li><a href="/logout"><i class="fa fa-power-off"></i><span>Logout</span></a></li>
      </ul>
    </div>
    <div class="tabs">
      <ul>
        <li>
          <p><i class="fa fa-user"></i></p>
          <p>Total User: 0</p>
        </li>
        <li>
          <p><i class="fa fa-user" style="color: green;"></i></p>
          <p>Active Users: 0</p>
        </li>
        <li id="inactive">
          <p><i class="fa fa-user" style="color: red;"></i></p>
          <p>Inactive Users: 0</p>
        </li>
      </ul>
    </div>
  </body>
</html>
